<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tnk.pha">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-feature android:name="android.hardware.sensor.gyroscope" />
    <uses-feature android:name="android.hardware.location" />
    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name="com.tnk.pha.OnBootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="com.tnk.pha.ReminderService" />
        <receiver android:name="com.tnk.pha.OnAlarmReceiver" />
        <activity
            android:name="com.tnk.pha.PHA_MM"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_Calc"
            android:label="@string/actTitle_PHA_Calc"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tnk.pha.PHA_MM" />
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_Sudoku"
            android:label="@string/actTitle_PHA_Sudoku"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tnk.pha.PHA_MM" />
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_Db"
            android:label="@string/actTitle_PHA_Db"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tnk.pha.PHA_MM" />
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_SensorTest"
            android:label="@string/actTitle_PHA_Test"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tnk.pha.PHA_MM" />
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_Search"
            android:label="@string/actTitle_PHA_Search"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_SearchDisplay"
            android:label="@string/actTitle_PHA_Search_Display"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_DbHandler"
            android:label="@string/actTitle_PHA_Db_Handler"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_Voice"
            android:label="@string/actTitle_PHA_Voice"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_SudokuGame"
            android:label="@string/actTitle_PHA_Sudoku"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_TiltTest"
            android:label="@string/actTitle_PHA_Test"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_TiltScrollTest"
            android:label="@string/actTitle_PHA_Test"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_Reminder_List"
            android:label="@string/title_activity_pha__reminder__list"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.tnk.pha.PHA_Reminder_Entry"
            android:label="@string/actTitle_PHA_Test"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.tnk.pha.PHA_RemTaskPrefs"
            android:label="@string/actTitle_PHA_Test"
            android:screenOrientation="landscape"/>
        <activity
            android:name="com.tnk.pha.PHA_Converter"
            android:label="@string/title_activity_pha__converter"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>