<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item
        android:bottom="0dp"
        android:left="45dp"
        android:right="0dp"
        android:top="22dp">
        <shape android:shape="rectangle">

            <solid android:color="#90000000" />
            <corners android:radius="5dp" />

        </shape>
    </item>
    <!-- Border Colour -->
    <item
        android:bottom="8dp"
        android:left="13dp"
        android:right="23dp">
        <shape android:shape="rectangle">
            <solid android:color="#6600FF00" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Body colour backdrop-->
    <item
        android:bottom="10dp"
        android:left="15dp"
        android:right="25dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#55000000" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Body colour -->
    <item
        android:bottom="10dp"
        android:left="15dp"
        android:right="25dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#50000000" />
            <corners android:radius="5dp" />
        </shape>
    </item>


    <!-- See-thru effect -->
    <item
        android:bottom="10dp"
        android:left="45dp"
        android:right="25dp"
        android:top="22dp">
        <shape android:shape="rectangle">

            <solid android:color="#08000000" />
            <corners android:radius="5dp" />

        </shape>
    </item>

</layer-list>