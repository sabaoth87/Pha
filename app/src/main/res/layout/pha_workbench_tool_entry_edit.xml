<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:theme="@android:style/Theme.Dialog">

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#bd599792">

        <TextView
            android:id="@+id/tv_edit_tool_name_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NickName"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:labelFor="@+id/et_edit_tool_name"/>
        <EditText
            android:id="@+id/et_edit_tool_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 'Give it a nickname?' "/>
        <LinearLayout
            android:id="@+id/ll_edit_tool_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_edit_tool_name"
            android:orientation="horizontal"
            android:layout_marginStart="15dp">
        <TextView
            android:id="@+id/tv_edit_tool_brand_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand:"/>
            <Spinner
                android:id="@+id/sp_edit_tool_brand"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint=" 'Brand' "/>
        <TextView
            android:id="@+id/tv_edit_tool_type_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 'Type' "/>
            <Spinner
                android:id="@+id/sp_edit_tool_type"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint=" 'Type' "/>
        <TextView
            android:id="@+id/tv_edit_tool_quality_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quality:"/>
            <Spinner
                android:id="@+id/sp_edit_tool_quality"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint=" 'New?' "/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_tool_info"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_edit_tool_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/tv_edit_tool_quantity_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty.#:"
            android:labelFor="@+id/et_edit_tool_quantity"/>
        <EditText
            android:id="@+id/et_edit_tool_quantity"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:text="#"/>
        <TextView
            android:id="@+id/tv_edit_tool_size_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"/>
            <Spinner
                android:id="@+id/sp_edit_tool_size"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint=" 'Size' "/>
            <TextView
                android:id="@+id/tv_tool_ammo_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ammo: "/>
            <Spinner
                android:id="@+id/sp_edit_tool_ammo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint=" Ammo "/>
            <TextView
                android:id="@+id/tv_edit_tool_status_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "/>
            <Spinner
                android:id="@+id/sp_edit_tool_status"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Operational?"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit_tool_links"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_edit_tool_info"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_tool_cat_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 'Category : ' "/>
            <TextView
                android:id="@+id/tv_tool_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 'Category' "/>
            <TextView
                android:id="@+id/tv_edit_tool_uses_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'Used for:' "/>
            <TextView
                android:id="@+id/tv_edit_tool_uses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TagFont"
                android:text=" 'uses' "/>
            <TextView
                android:id="@+id/tv_edit_tool_location_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stored? "/>
            <Spinner
                android:id="@+id/sp_edit_tool_location"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Location"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_tool_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_tool_links"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/remsConfirm" />
        <Button
            android:id="@+id/btn_tool_clear_fields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_tool_add"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Clear" />
    </RelativeLayout>

</ScrollView>