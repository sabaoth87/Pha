<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".pha.PHA_SensorTest">

    <LinearLayout
        android:id="@+id/sensorinfo"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gyro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/locationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PHA_Test_Zeros"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/locationTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PHA_Test_Zeros"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensorinfo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/locationGeocode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PHA_Test_Values"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/locationGeocode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PHA_Test_Values"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>