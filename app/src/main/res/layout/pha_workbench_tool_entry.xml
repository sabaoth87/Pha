<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:theme="@android:style/Theme.Dialog">

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#bd599792">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/iv_tool_image"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tv_tool_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_id_"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/tv_tool_name"
            android:layout_below="@+id/iv_tool_image"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 'Nickname'"/>
        <LinearLayout
            android:id="@+id/ll_tool_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_tool_name"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_tool_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 'Brand' "/>

        <TextView
            android:id="@+id/tv_tool_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 'Type' "/>
            <TextView
                android:id="@+id/tv_tool_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ,'Quality' "/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tool_info"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_tool_name"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_tool_quantity_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Qty.#: "/>
        <TextView
            android:id="@+id/tv_tool_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 'Qty' "/>
        <TextView
            android:id="@+id/tv_tool_size_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Size : "/>
        <TextView
            android:id="@+id/tv_tool_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 'Size' "/>
            <TextView
                android:id="@+id/tv_tool_ammo_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Ammo : "/>
            <TextView
                android:id="@+id/tv_tool_ammo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 'Ammo' "/>
            <TextView
                android:id="@+id/tv_tool_status_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Status : "/>
            <TextView
                android:id="@+id/tv_tool_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tool_links"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_tool_info"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_tool_cat_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 'Category : ' "/>
            <TextView
                android:id="@+id/tv_tool_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 'Category' "/>
            <TextView
                android:id="@+id/tv_tool_uses_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 'Used for : ' "/>
            <TextView
                android:id="@+id/tv_tool_uses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 'uses' "/>
            <TextView
                android:id="@+id/tv_tool_location_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 'Found : ' "/>
            <TextView
                android:id="@+id/tv_tool_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 'location' "/>


        </LinearLayout>


        <ImageButton
            android:id="@+id/ib_tool_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ll_tool_links"
            android:src="@drawable/selector_edit_button"/>

    </RelativeLayout>

</ScrollView>