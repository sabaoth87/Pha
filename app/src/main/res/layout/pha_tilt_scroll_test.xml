<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".PHA_TiltScrollTest">

        <TextView
            android:id="@+id/scrollUpCheckTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:nextFocusDown="@+id/scrollDownCheckTxt"
            android:text="@string/PHA_Test_Zeros" />

        <TextView
            android:id="@+id/scrollDownCheckTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollUpCheckTxt"
            android:layout_centerHorizontal="true"
            android:nextFocusDown="@+id/button1"
            android:nextFocusUp="@+id/scrollUpCheckTxt"
            android:text="@string/PHA_Test_Zeros" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/tiltScreenScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#98000000"
        android:orientation="vertical"
        tools:context=".PHA_MainScreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainScreenTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mainScreenTitle"
                android:textColor="#009999" />

            <Button
                android:id="@+id/button1"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusDown="@+id/button2"
                android:nextFocusUp="@+id/scrollDownCheckTxt"
                android:text="@string/button1Text">

            </Button>

            <Button
                android:id="@+id/button2"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusDown="@+id/button3"
                android:nextFocusUp="@+id/button1"
                android:text="@string/button2Text">

            </Button>

            <Button
                android:id="@+id/button3"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusDown="@+id/button4"
                android:nextFocusUp="@+id/button2"
                android:text="@string/button3Text"></Button>

            <Button
                android:id="@+id/button4"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button3"
                android:text="@string/button4Text"></Button>

            <Button
                android:id="@+id/button5"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button4"
                android:text="@string/button5Text"></Button>

            <Button
                android:id="@+id/button6"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button5"
                android:text="@string/button6Text"></Button>

            <Button
                android:id="@+id/button7"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button6"
                android:text="@string/button7Text"></Button>

            <Button
                android:id="@+id/button8"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button7"
                android:text="@string/button8Text"></Button>

            <Button
                android:id="@+id/button9"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button8"
                android:text="@string/button9Text"></Button>

            <Button
                android:id="@+id/button10"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button9"
                android:text="@string/button10Text"></Button>

            <Button
                android:id="@+id/button11"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button10"
                android:text="@string/button11Text"></Button>

            <Button
                android:id="@+id/button12"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button11"
                android:text="@string/button12Text"></Button>

            <Button
                android:id="@+id/button13"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button12"
                android:text="@string/button13Text"></Button>

            <Button
                android:id="@+id/button14"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button13"
                android:text="@string/button14Text"></Button>

            <Button
                android:id="@+id/button15"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button14"
                android:text="@string/button15Text"></Button>

            <Button
                android:id="@+id/button16"
                style="@style/PHAY_MainMenuBtn"
                android:nextFocusUp="@+id/button15"
                android:text="@string/button16Text"></Button>
        </LinearLayout>

    </ScrollView>
</LinearLayout>