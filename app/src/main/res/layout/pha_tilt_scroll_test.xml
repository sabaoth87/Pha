<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PHA_TiltScrollTest" >

    <TextView
        android:id="@+id/scrollUpCheckTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:nextFocusDown="@+id/scrollDownCheckTxt"
        android:text="@string/PHA_Test_Zeros" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollDownCheckTxt"
        android:layout_below="@+id/scrollUpCheckTxt"
        android:layout_centerHorizontal="true"
        android:nextFocusDown="@+id/button1"
        android:nextFocusUp="@+id/scrollUpCheckTxt"
        android:text="@string/PHA_Test_Zeros" />
</RelativeLayout>

<ScrollView 
    android:id="@+id/tiltScreenScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#98000000"
    android:orientation="vertical"
    tools:context=".PHA_MainScreen" >

       <LinearLayout
           android:orientation="vertical"
           	android:layout_width="match_parent"
    		android:layout_height="wrap_content">
    <TextView
        android:id="@+id/mainScreenTitleText"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainScreenTitle"
        android:textColor="#009999" />
    
        <Button
            android:id="@+id/button1"
            style="@style/PHAY_MainMenuBtn"
            android:nextFocusUp="@+id/scrollDownCheckTxt"
            android:nextFocusDown="@+id/button2"
            android:text="@string/button1Text" >
            
        </Button>
        
        <Button
            android:id="@+id/button2"
            style="@style/PHAY_MainMenuBtn"
            android:nextFocusDown="@+id/button3"
            android:nextFocusUp="@+id/button1"
            android:text="@string/button2Text" >
            
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button3"
            android:text="@string/button3Text"
            android:nextFocusUp="@+id/button2"
        	android:nextFocusDown="@+id/button4"
            >
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button4"
        	android:text="@string/button4Text"
        	android:nextFocusUp="@+id/button3"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button5"
        	android:text="@string/button5Text"
        	android:nextFocusUp="@+id/button4"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button6"
        	android:text="@string/button6Text"
        	android:nextFocusUp="@+id/button5"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button7"
        	android:text="@string/button7Text"
        	android:nextFocusUp="@+id/button6"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button8"
        	android:text="@string/button8Text"
        	android:nextFocusUp="@+id/button7"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button9"
        	android:text="@string/button9Text"
        	android:nextFocusUp="@+id/button8"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button10"
        	android:text="@string/button10Text"
        	android:nextFocusUp="@+id/button9"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button11"
        	android:text="@string/button11Text"
        	android:nextFocusUp="@+id/button10"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button12"
        	android:text="@string/button12Text"
        	android:nextFocusUp="@+id/button11"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button13"
        	android:text="@string/button13Text"
        	android:nextFocusUp="@+id/button12"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button14"
        	android:text="@string/button14Text"
        	android:nextFocusUp="@+id/button13"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button15"
        	android:text="@string/button15Text"
        	android:nextFocusUp="@+id/button14"
        	>
        </Button>
        
        <Button style="@style/PHAY_MainMenuBtn"
            android:id="@+id/button16"
        	android:text="@string/button16Text"
        	android:nextFocusUp="@+id/button15"
        	>
        </Button>
        </LinearLayout>
     
</ScrollView>
</LinearLayout>